<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_dialog_style" parent="base_common_dialog_style">
        <item name="commonDialogBackground">@android:color/white</item>
        <item name="commonDialogTitleTextSize">18sp</item>
        <item name="commonDialogTitleTextColor">@color/colorAccent</item>
        <item name="commonDialogContentTextSize">15sp</item>
        <item name="commonDialogContentTextColor">@color/colorPrimaryDark</item>
        <item name="commonDialogBtnTextSize">18sp</item>
    </style>


    <style name="my_progress_dialog_theme" parent="common_progress_dialog_theme_base">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <item name="commonProgressDialogMsgTextColor">@android:color/white</item>
        <item name="commonProgressDialogTextSize">16dp</item>
    </style>
</resources>
